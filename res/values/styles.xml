<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Styles generated by action bar style generator -->
    <style name="Theme.everyuse" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_everyuse</item>
        <item name="popupMenuStyle">@style/everyuse_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/everyuse_DropDownListView</item>
        <item name="actionBarTabStyle">@style/everyuse_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/everyuse_DropDownNav</item>
        <item name="actionBarStyle">@style/everyuse_solid_ActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_everyuse</item>
        <item name="android:popupMenuStyle">@style/everyuse_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/everyuse_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/everyuse_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/everyuse_DropDownNav</item>
        <item name="android:actionBarStyle">@style/everyuse_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_everyuse</item>
    </style>

    <style name="everyuse_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_everyuse</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_everyuse</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_everyuse</item>
        <item name="progressBarStyle">@style/everyuse_ProgressBar</item>
        <item name="android:background">@drawable/ab_solid_everyuse</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_everyuse</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_everyuse</item>
        <item name="android:progressBarStyle">@style/everyuse_ProgressBar</item>
    </style>

    <style name="everyuse_transparent_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_everyuse</item>
        <item name="progressBarStyle">@style/everyuse_ProgressBar</item>
        <item name="android:background">@drawable/ab_transparent_everyuse</item>
        <item name="android:progressBarStyle">@style/everyuse_ProgressBar</item>
    </style>

    <style name="everyuse_PopupMenu" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_everyuse</item>
    </style>

    <style name="everyuse_DropDownListView" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_everyuse</item>
    </style>

    <style name="everyuse_ActionBarTabStyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_everyuse</item>
        <item name="android:background">@drawable/tab_indicator_ab_everyuse</item>
    </style>

    <style name="everyuse_DropDownNav" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_everyuse</item>
        <item name="android:background">@drawable/spinner_background_ab_everyuse</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_everyuse</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_everyuse</item>
    </style>

    <style name="everyuse_ProgressBar" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_everyuse</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.everyuse.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/everyuse_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/everyuse_DropDownListView</item>
        <item name="android:popupMenuStyle">@style/everyuse_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/everyuse_DropDownListView</item>
    </style>

    <!-- PictureStyle -->
    <style name="PictureStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/image_loading</item>
    </style>

    <style name="PictureStyle.Thumb">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:contentDescription">thumb image</item>
    </style>

    <style name="PictureStyle.Large">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:contentDescription">large image</item>
    </style>

    <style name="PictureStyle.Preview">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:contentDescription">preview image</item>
    </style>

    <!-- TextViewStyle -->
    <style name="TextViewStyle"></style>

    <style name="TextViewStyle.ListItemCommentText">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="TextViewStyle.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyle.Wrap.ThemeOrange">
        <item name="android:textColor">@color/ThemeOrange</item>
    </style>

    <style name="TextViewStyle.Wrap.ThemePink">
        <item name="android:textColor">@color/ThemePink</item>
    </style>

    <style name="TextViewStyle.Wrap.ListItemMainText">
        <item name="android:textColor">@color/ThemeOrange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxEms">6</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- ButtonStyle -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonStyle.Grey">
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Boilerplates -->
    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight" parent="Match">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MatchWidth" parent="Match">
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>