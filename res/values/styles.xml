<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="EveryUseTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar" />

    <!-- PictureStyle -->
    <style name="PictureStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/image_loading</item>
    </style>

    <style name="PictureStyle.Thumb">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:contentDescription">thumb image</item>
    </style>

    <style name="PictureStyle.Large">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:contentDescription">large image</item>
    </style>

    <style name="PictureStyle.Preview">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:contentDescription">preview image</item>
    </style>

    <!-- TextViewStyle -->
    <style name="TextViewStyle"></style>

    <style name="TextViewStyle.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyle.Wrap.ThemeOrange">
        <item name="android:textColor">@color/ThemeOrange</item>
    </style>

    <style name="TextViewStyle.Wrap.ThemePink">
        <item name="android:textColor">@color/ThemePink</item>
    </style>

    <style name="TextViewStyle.Wrap.ListItemMainText">
        <item name="android:textColor">@color/ThemeOrange</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxEms">6</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextViewStyle.Wrap.ListItemCommentText">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ButtonStyle -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonStyle.Grey">
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Boilerplates -->
    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight" parent="Match">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MatchWidth" parent="Match">
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>