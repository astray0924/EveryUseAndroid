<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EveryUseTheme" parent="android:Theme.Light">
        
    </style>

    <style name="PictureStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="PictureStyle.Thumb">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:contentDescription">thumb image</item>
    </style>

    <style name="PictureStyle.Large">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:contentDescription">large image</item>
    </style>

    <style name="PictureStyle.Preview">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:contentDescription">preview image</item>
    </style>

</resources>