<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/TextViewStyle.Wrap.ThemePink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tv_item" />

        <EditText
            android:id="@+id/et_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            style="@style/TextViewStyle.Wrap.ThemePink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tv_purpose" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/sp_purpose_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6" />

            <EditText
                android:id="@+id/et_purpose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:inputType="text" />
        </LinearLayout>

        <TextView
            style="@style/TextViewStyle.Wrap.ThemePink"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tv_place" />

        <Spinner
            android:id="@+id/sp_place"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextViewStyle.Wrap.ThemePink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="@string/tv_photo" />

            <ImageButton
                android:id="@+id/btn_photo_select"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_content_new" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_photo"
            style="@style/PictureStyle.Preview"
            android:contentDescription="Picture to add" />

        <Button
            android:id="@+id/btn_submit"
            style="@style/ButtonStyle.Grey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_create" />
    </LinearLayout>

</ScrollView>