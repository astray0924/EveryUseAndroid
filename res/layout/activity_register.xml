<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWidth"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/title_text"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/ThemePink" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/register_background"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <!-- Header -->

        <TextView
            style="@style/MatchWidth"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/tv_header_signup"
            android:textColor="@color/white" />

        <!-- email -->

        <EditText
            android:id="@+id/et_email"
            style="@style/RegisterFormEditTextStyle"
            android:ems="10"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress" >

            <requestFocus />
        </EditText>

        <!-- username -->

        <EditText
            android:id="@+id/et_username"
            style="@style/RegisterFormEditTextStyle"
            android:hint="@string/hint_username"
            android:inputType="text" />

        <!-- password -->

        <EditText
            android:id="@+id/et_password"
            style="@style/RegisterFormEditTextStyle"
            android:hint="@string/hint_password"
            android:inputType="textPassword" />

        <!-- password confirmation -->

        <EditText
            android:id="@+id/et_password_confirm"
            style="@style/RegisterFormEditTextStyle"
            android:hint="@string/hint_password_again"
            android:inputType="textPassword" />
    </LinearLayout>

    <!-- register button -->

    <Button
        android:id="@+id/btn_register_done"
        style="@style/ButtonStyle.Grey"
        android:layout_width="320dp"
        android:layout_marginTop="10dp"
        android:text="@string/btn_signup_done" />

</LinearLayout>